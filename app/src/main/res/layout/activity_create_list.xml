<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context="pl.kosteklvp.bbbk_v2.LoginActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewBack"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvBoard"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="@color/secondary_color"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Powrót"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvBoard"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Tworzenie listy"
        android:textColor="@color/secondary_color"
        android:textSize="21sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/logo" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardViewBack"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_alignRight="@+id/cardViewBack"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_alignTop="@+id/textViewTitle"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="text"
        android:textColor="@color/secondary_color" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardViewBack"
        android:layout_alignLeft="@+id/textViewDesc"
        android:layout_alignRight="@+id/cardViewBack"
        android:layout_alignStart="@+id/textViewDesc"
        android:layout_below="@+id/textViewDesc"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="textPersonName"
        android:textColor="@color/secondary_color" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCreate"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        app:cardBackgroundColor="@color/secondary_color"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Utwórz"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvBoard"
        android:layout_alignStart="@+id/tvBoard"
        android:layout_below="@+id/tvBoard"
        android:layout_marginTop="41dp"
        android:text="Tytuł"
        android:textColor="@color/secondary_color"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTitle"
        android:layout_alignStart="@+id/editTextTitle"
        android:layout_below="@+id/editTextTitle"
        android:layout_marginTop="25dp"
        android:text="Opis"
        android:textColor="@color/secondary_color"
        android:textSize="21sp" />

</RelativeLayout>
